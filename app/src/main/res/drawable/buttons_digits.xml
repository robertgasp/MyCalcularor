<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/gray_400"
                android:endColor="@color/gray_400"
                android:angle="180" />
            <stroke
                android:width="3dp"
                android:color="@color/gray_400" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape
            android:shape="rectangle">
            <gradient
                android:endColor="@color/number_focus1"
                android:startColor="@color/number_focus2"
                android:angle="180" />
            <stroke
                android:width="3dp"
                android:color="@color/gray_400" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:endColor="@color/number_push_1"
                android:startColor="@color/gray_600"
                android:angle="180" />
            <stroke
                android:width="3dp"
                android:color="@color/gray_400" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>
</selector>